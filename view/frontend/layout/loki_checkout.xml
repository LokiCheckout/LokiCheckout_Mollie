<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:View/Layout:etc/page_configuration.xsd">
    <body>
        <block
            name="loki-checkout.billing.payment-methods.mollie_methods_creditcard.form"
            template="Yireo_LokiCheckoutMollie::luma/method/creditcard.phtml">
            <arguments>
                <argument name="magewire" xsi:type="object">
                    Yireo\LokiCheckoutMollie\Magewire\Checkout\Payment\Method\Creditcard
                </argument>
                <argument name="additional_css" xsi:type="string">p-4 border border-zinc-200 bg-zinc-100</argument>
            </arguments>
        </block>

        <block
            name="loki-checkout.billing.payment-methods.mollie_methods_ideal.form"
            template="Yireo_LokiCheckoutMollie::luma/method/issuer.phtml">
            <arguments>
                <argument name="magewire" xsi:type="object">
                    Yireo\LokiCheckoutMollie\Magewire\Checkout\Payment\Method\WithIssuer
                </argument>
                <argument name="additional_css" xsi:type="string">p-4 border border-zinc-200 bg-zinc-100</argument>
            </arguments>
        </block>

        <referenceContainer name="loki-checkout.script.alpine-components">
            <block name="loki-checkout-mollie.script.components.step-component" template="Yireo_LokiCheckoutMollie::script/component/method/issuer.phtml" />
        </referenceContainer>
    </body>
</page>

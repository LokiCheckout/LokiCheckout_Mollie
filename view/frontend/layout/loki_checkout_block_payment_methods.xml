<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:View/Layout:etc/page_configuration.xsd">
    <body>
        <block
            name="loki-checkout.payment.payment-methods.mollie_methods_creditcard.form"
            template="Yireo_LokiCheckoutMollie::checkout/payment/method/creditcard.phtml">
            <arguments>
                <argument name="additional_css" xsi:type="string">p-4 border border-zinc-200 bg-zinc-100</argument>
            </arguments>
        </block>

        <block
            name="loki-checkout.payment.payment-methods.mollie_methods_ideal.form"
            template="Yireo_LokiCheckoutMollie::checkout/payment/method/issuer.phtml">
            <arguments>
                <argument name="css" xsi:type="array">
                    <item name="block" xsi:type="array">
                        <item name="custom" xsi:type="string">p-4 border border-zinc-200 bg-zinc-100</item>
                    </item>
                </argument>

                <argument name="child_template" xsi:type="array">
                    <item name="none" xsi:type="string">Yireo_LokiCheckoutMollie::checkout/payment/method/issuer/none.phtml</item>
                    <item name="dropdown" xsi:type="string">Yireo_LokiCheckoutMollie::checkout/payment/method/issuer/dropdown.phtml</item>
                    <item name="list" xsi:type="string">Yireo_LokiCheckoutMollie::checkout/payment/method/issuer/list.phtml</item>
                </argument>
            </arguments>
        </block>

        <referenceContainer name="loki-components">
            <block name="loki-checkout-mollie.script.components.creditcard" template="Yireo_LokiCheckoutMollie::script/component/creditcard-component.phtml" />
        </referenceContainer>

        <referenceBlock name="loki-components.css_classes">
            <arguments>
                <argument name="loki-checkout.payment.payment-methods.mollie_methods_ideal.form.issuers" xsi:type="array">
                    <item name="block" xsi:type="array">
                        <item name="grid" xsi:type="string">grid grid-cols-3</item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>

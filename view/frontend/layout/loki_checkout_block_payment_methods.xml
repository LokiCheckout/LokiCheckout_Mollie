<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:View/Layout:etc/page_configuration.xsd">
    <body>
        <block
            name="loki-checkout.payment.methods.mollie_methods_creditcard.form"
            template="LokiCheckout_Mollie::checkout/payment/method/creditcard.phtml">
            <arguments>
                <argument name="additional_css" xsi:type="string">p-4</argument>
            </arguments>
        </block>

        <block
            name="loki-checkout.payment.methods.mollie_methods_creditcard_vault.form"
            template="LokiCheckout_Mollie::checkout/payment/method/creditcard_vault.phtml">
            <arguments>
                <argument name="additional_css" xsi:type="string">p-4</argument>
            </arguments>
        </block>

        <referenceContainer name="loki-components">
            <block name="loki-checkout-mollie.script.components.creditcard"  ifconfig="payment/mollie_methods_creditcard/use_components" template="LokiCheckout_Mollie::script/component/creditcard-component.phtml" />
        </referenceContainer>
    </body>
</page>

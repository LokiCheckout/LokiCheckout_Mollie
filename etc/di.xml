<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="LokiCheckout\Core\Config\LokiCheckoutModules">
        <arguments>
            <argument name="modules" xsi:type="array">
                <item name="LokiCheckout_Mollie" xsi:type="string">LokiCheckout_Mollie</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Quote\Api\PaymentMethodManagementInterface">
        <plugin name="LokiCheckout_Mollie::hideCreditcardVault" type="LokiCheckout\Mollie\Plugin\HideCreditcardVault"/>
    </type>

    <type name="Loki\Components\Validator\ValidatorRegistry">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="in3_dob_check" xsi:type="object">LokiCheckout\Mollie\Validator\Component\In3DobValidator</item>
            </argument>
        </arguments>
    </type>
</config>

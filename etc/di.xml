<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Yireo\LokiCheckout\Config\LokiCheckoutModules">
        <arguments>
            <argument name="modules" xsi:type="array">
                <item name="Yireo_LokiCheckoutMollie" xsi:type="string">Yireo_LokiCheckoutMollie</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Quote\Api\PaymentMethodManagementInterface">
        <plugin name="loki_checkout_mollie_hide_creditcard_vault" type="Yireo\LokiCheckoutMollie\Plugin\HideCreditcardVault" />
    </type>

    <type name="Yireo\LokiComponents\Validator\ValidatorRegistry">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="in3_dob_check" xsi:type="object">Yireo\LokiCheckoutMollie\Validator\Component\In3DobValidator</item>
            </argument>
        </arguments>
    </type>
</config>
